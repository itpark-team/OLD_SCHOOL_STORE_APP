<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonGoBackToCatalogItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Назад к категории" />

        <ViewFlipper
            android:id="@+id/viewFlipperCatalogImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ViewFlipper>

        <TextView
            android:id="@+id/textViewCatalogProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewCatalogProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewCatalogProductCountPurchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewCatalogProductCountLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewCatalogProductCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonCatalogAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить в корзину" />

        <TextView
            android:id="@+id/textViewCatalogProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>