<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonGoBackToSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Назад к поиску" />

        <ViewFlipper
            android:id="@+id/viewFlipperSearchImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ViewFlipper>

        <TextView
            android:id="@+id/textViewSearchProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewSearchProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewSearchProductCountPurchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewSearchProductCountLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewSearchProductCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonSearchAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить в корзину" />

        <TextView
            android:id="@+id/textViewSearchProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>